pipeline { 
    agent any 
    stages { 
        stage('git checkout') { 
          steps {  
            checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/HarshitSingh-Codes/jenkins-terraform.git']])            } 
        } 
        stage('terraform init'){ 
            steps { 
                sh 'terraform init'  
            } 
        } 
        stage('terraform plan'){ 
            steps { 
                sh 'terraform plan'  
            } 
        } 
    } 
}